<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="6"

        android:rowCount="5">
        <Button
            android:id="@+id/onOfBTN"
            android:layout_width="wrap_content"
            android:height="100dp"
            android:text="On"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_row="0"
            android:layout_columnWeight="1"
            android:layout_column="0"></Button>
        <Button
            android:id="@+id/DeleteBTN"
            android:layout_width="wrap_content"
            android:height="100dp"
            android:text="C"
            android:layout_columnWeight="1"

            android:textSize="25dp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_row="0"
            android:layout_column="1"></Button>
        <Button
            android:layout_width="wrap_content"
            android:id="@+id/percentBTN"
            android:height="100dp"
            android:text="%"
            android:textSize="25dp"
            android:layout_columnWeight="1"

            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_row="0"
            android:layout_column="2"></Button>
        <Button
            android:id="@+id/sqrtBTN"
            android:layout_width="wrap_content"
            android:height="100dp"
            android:text="âˆš"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:layout_columnWeight="1"

            android:background="@color/black"
            android:layout_row="0"
            android:layout_column="3"></Button>
        <Button
            android:id="@+id/charBTN7"
            android:layout_width="wrap_content"
            android:height="100dp"
            android:text="7"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_row="1"
            android:layout_columnWeight="1"
            android:layout_column="0"></Button>
        <Button
            android:id="@+id/charBTN8"
            android:layout_width="wrap_content"
            android:height="100dp"
            android:text="8"
            android:layout_columnWeight="1"

            android:textSize="25dp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_row="1"
            android:layout_column="1"></Button>
        <Button
            android:layout_width="wrap_content"
            android:id="@+id/charBTN9"
            android:height="100dp"
            android:text="9"
            android:textSize="25dp"
            android:layout_columnWeight="1"

            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_row="1"
            android:layout_column="2"></Button>
        <Button
            android:id="@+id/divisionBTN"
            android:layout_width="wrap_content"
            android:height="100dp"
            android:text="/"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:layout_columnWeight="1"

            android:background="@color/black"
            android:layout_row="1"
            android:layout_column="3"></Button>
        <Button
            android:id="@+id/charBTN4"
            android:layout_width="wrap_content"
            android:height="100dp"
            android:text="4"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_row="2"
            android:layout_columnWeight="1"
            android:layout_column="0"></Button>
        <Button
            android:id="@+id/charBTN5"
            android:layout_width="wrap_content"
            android:height="100dp"
            android:text="5"
            android:layout_columnWeight="1"

            android:textSize="25dp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_row="2"
            android:layout_column="1"></Button>
        <Button
            android:layout_width="wrap_content"
            android:id="@+id/charBTN6"
            android:height="100dp"
            android:text="6"
            android:textSize="25dp"
            android:layout_columnWeight="1"

            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_row="2"
            android:layout_column="2"></Button>
        <Button
            android:id="@+id/multiplicationBTN"
            android:layout_width="wrap_content"
            android:height="100dp"
            android:text="X"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:layout_columnWeight="1"

            android:background="@color/black"
            android:layout_row="2"
            android:layout_column="3"></Button>
        <Button
            android:id="@+id/charBTN1"
            android:layout_width="wrap_content"
            android:height="100dp"
            android:text="1"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_row="3"
            android:layout_columnWeight="1"
            android:layout_column="0"></Button>
        <Button
            android:id="@+id/charBTN2"
            android:layout_width="wrap_content"
            android:height="100dp"
            android:text="2"
            android:layout_columnWeight="1"

            android:textSize="25dp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_row="3"
            android:layout_column="1"></Button>
        <Button
            android:layout_width="wrap_content"
            android:id="@+id/charBTN3"
            android:height="100dp"
            android:text="3"
            android:textSize="25dp"
            android:layout_columnWeight="1"

            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_row="3"
            android:layout_column="2"></Button>
        <Button
            android:id="@+id/subtractionBTN"
            android:layout_width="wrap_content"
            android:height="100dp"
            android:text="-"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:layout_columnWeight="1"

            android:background="@color/black"
            android:layout_row="3"
            android:layout_column="3"></Button>
        <Button
            android:id="@+id/charBTN0"
            android:layout_width="wrap_content"
            android:height="100dp"
            android:text="0"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_row="4"
            android:layout_columnWeight="1"
            android:layout_column="0"></Button>
        <Button
            android:id="@+id/charBTNdot"
            android:layout_width="wrap_content"
            android:height="100dp"
            android:text="."
            android:layout_columnWeight="1"

            android:textSize="25dp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_row="4"
            android:layout_column="1"></Button>
        <Button
            android:layout_width="wrap_content"
            android:id="@+id/charBTNequal"
            android:height="100dp"
            android:text="="
            android:textSize="25dp"
            android:layout_columnWeight="1"

            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_row="4"
            android:layout_column="2"></Button>
        <Button
            android:id="@+id/plusBTN"
            android:layout_width="wrap_content"
            android:height="100dp"
            android:text="+"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:layout_columnWeight="1"

            android:background="@color/black"
            android:layout_row="4"
            android:layout_column="3"></Button>





    </GridLayout>
</RelativeLayout>
